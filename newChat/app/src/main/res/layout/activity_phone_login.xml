<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/input"
        android:hint="write phone number"
        android:textAllCaps="false"
        android:drawableStart="@drawable/phone"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/verfication_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/input"
        android:layout_below="@+id/phone_number_input"
        android:hint="write verification code"
        android:textAllCaps="false"
        android:drawableStart="@drawable/password"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/send_ver_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Verification Code"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/verfication_code_input"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/button"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="verify"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/send_ver_code_button"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/button"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:visibility="invisible"
        />




</RelativeLayout>